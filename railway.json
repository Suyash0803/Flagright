{
  "$schema": "https://railway.app/railway.schema.json",
  "services": {
    "backend": {
      "root": "backend",
      "dockerfile": "Dockerfile",
      "env": {
        "PORT": "5000",
        "NEO4J_URI": "${{ NEO4J_URI }}",
        "NEO4J_USERNAME": "${{ NEO4J_USERNAME }}",
        "NEO4J_PASSWORD": "${{ NEO4J_PASSWORD }}"
      },
      "plugins": ["neo4j"]
    },
    "frontend": {
      "root": "frontend",
      "dockerfile": "Dockerfile",
      "env": {
        "PORT": "80",
        "REACT_APP_API_URL": "${{ BACKEND_URL }}"
      }
    }
  },
  "plugins": {
    "neo4j": {
      "service": "neo4j"
    }
  }
}